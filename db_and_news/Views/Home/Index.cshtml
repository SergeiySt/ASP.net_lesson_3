                <tr>
                    <td>@user.id_users</td>
                    <td>@user.SName</td>
                    <td>@user.SEmail</td>
                    <td>@user.SPhone</td>
                    <td>@user.SDate</td>
                </tr>
            }
        </tbody>
    </table>
